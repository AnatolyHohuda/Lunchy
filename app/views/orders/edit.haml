.row.justify-content-center
  .col
    %h2.text-center
      Edit Order ##{@order.id}

    .col.text-center  
      = simple_form_for(@order, url: order_path(@order), namespace: 'second_namespace', html: {method: :put}) do |f|
        = f.error_notification
        .form-inputs
          = f.association :victuals, collection: @order.menu.victuals, as: :check_boxes
        .form-actions.text-center
          = f.button :submit, "Change Items", class: 'btn btn-primary w-50' 

