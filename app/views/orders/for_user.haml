-if @orders.empty?
  -unless current_user.admin?
    %h3.text-center
      You didn't make any orders.
    %h3.row.justify-content-center
      = link_to "Make an order", "#"
  -else
    %h3.text-center
      #{@user.name} didn't make any orders. 
-else 
  %h1.text-center.mb-3
    #{@user.name} Orders
  %ul.list-unstyled
    = render @orders 
  = will_paginate @orders