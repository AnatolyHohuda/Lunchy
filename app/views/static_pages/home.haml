.text-center
  %h1.display-4 Lunchy App
  %p.lead Get your food!

.container
  .row.text-center
    - if user_signed_in?
      -if current_user.admin
        .offset-sm-3.col-sm-6
          .container
            %h3= link_to "Add new victual!", '#', method: :create
      -else
        .offset-sm-3.col-sm-6
          .container
            %h3= link_to "Check menus", today_menus_path
            %h3= link_to "Make an order", new_order_path
    - else
      .col-sm-4.offset-sm-2
        %h3= link_to "Sign Up", 'users/sign_up'
      .col-sm-4
        %h3= link_to "Log In", user_session_path
        
    