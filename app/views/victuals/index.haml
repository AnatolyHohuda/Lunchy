-unless @category.nil?
  %h5.text-center
    = render @category

.row
  .col-3
  .col
    %h1.text-center
      Victuals
  .col-3.text-right.m-3
    = link_to 'Add New', new_victual_path, class: 'btn btn-success'

-unless @victuals.empty?
  .container
    = render @victuals
    .row.justify-content-center.mt-3
      = will_paginate @victuals
-else 
  %h4.text-center
    No victuals of this category for now