.row.justify-content-center
  .col-6
    %h2.text-center Delete Categories
    .text-center
      = simple_form_for(:category_delete, url: destroy_chosen_categories_url, method: :post) do |f|
        = f.error_notification
        .form-inputs
          = f.input :category_ids, as: :check_boxes, collection: Category.all, label_method: :name, label: 'Choose categories to delete'
          -# = f.collection_check_boxes :category_ids, Category.all, :id, :name, {}
        .form-actions.text-center
          = f.button :submit, "Delete", class: 'btn btn-danger w-25'